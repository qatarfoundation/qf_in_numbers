{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.fixAll.stylelint": "explicit"
    },
    "eslint.validate": ["javascript"],
    "files.associations": {
        "**/src/*.js": "javascriptreact",
        "**/src/layouts/*.js": "javascriptreact",
        "**/src/pages/*.js": "javascriptreact",
        "**/src/pages/*/*.js": "javascriptreact",
        "**/src/templates/*/*.js": "javascriptreact",
        "**/src/components/*.js": "javascriptreact",
        "**/src/components/*/*.js": "javascriptreact",
        "**/src/components/*/*/*.js": "javascriptreact",
    },
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "stylelint.snippet": [
        "css",
        "less",
        "postcss",
        "scss"
    ],
    "stylelint.validate": [
        "css",
        "less",
        "postcss",
        "scss"
    ],
}
